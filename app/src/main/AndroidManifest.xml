            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".animations.NoAnimationActivity"/>
        <activity android:name=".animations.AccelerateRocketAnimationActivity"/>
        <activity android:name=".animations.ColorAnimationActivity"/>
        <activity android:name=".animations.FlyThereAndBackAnimationActivity"/>
        <activity android:name=".animations.FlyWithDogeAnimationActivity"/>
        <activity android:name=".animations.LaunchAndSpinAnimatiorSetAnimationActivity"/>
        <activity android:name=".animations.LaunchAndSpinViewPropertyAnimatorAnimationActivity"/>
        <activity android:name=".animations.LaunchRocketObjectAnimatorAnimationActivity"/>
        <activity android:name=".animations.RotateRocketAnimatioinActivity"/>
        <activity android:name=".animations.WithListenerAnimationActivity"/>
        <activity android:name=".animations.XmlAnimationActivity"/>
        <activity android:name=".animations.LaunchRocketValueAnimatorAnimationActivity"/>
    </application>

</manifest>